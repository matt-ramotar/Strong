extends layout.pug

block content
  h1.title.is-1 #{title}
  table.table
    thead
      tr
        th(scope='col') Exercise
        th(scope='col') Instructions
        th(scope='col') Exercise Type
        th(scope='col') Equipment
        th(scope='col')
    tbody
      each exercise in muscleExercises
        tr
          td= exercise.name
          td: a.button.is-small.is-link.is-light(href=`https://www.bodybuilding.com${exercise.bbPageUrl}`)
          td= exercise.type
          td= exercise.equipment
          td
