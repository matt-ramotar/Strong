extends layout.pug

include includes/auth-input.pug

append head
  script(src="../public/js/login.js" type="module" defer)

block content
  form#login-form
    h1 Log in to Mighty
    #errors-container
    input(type="hidden" name="_csrf" value=csrf)
    +authInput("Email or username", "username")
      input(type="text" name="username" required)
    +authInput("Password", "password")
      input(type="password" name="password" required)
    button(type="submit" disabled) Log in
    a.link-to-other-form(href="/signup") Sign up for Mighty
